# Job Automation - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Personal Information
PERSONAL_NAME=Your Full Name
PERSONAL_EMAIL=your.email@example.com
PERSONAL_PHONE=+1-XXX-XXX-XXXX

# LinkedIn Credentials (IMPORTANT: Use secure credential storage in production)
LINKEDIN_EMAIL=your.linkedin@example.com
LINKEDIN_PASSWORD=your_secure_password_here

# File Paths (relative to project root)
RESUME_PATH=resumes/Your_Resume.pdf
COVER_LETTER_PATH=cover_letters/Your_Cover_Letter.pdf

# Job Search Preferences
SALARY_MIN=80000
MAX_APPLICATIONS_PER_RUN=25
DELAY_BETWEEN_APPLICATIONS=10

# Automation Settings
HEADLESS_BROWSER=false
SAVE_SCREENSHOTS=true
SEND_EMAIL_NOTIFICATIONS=false
